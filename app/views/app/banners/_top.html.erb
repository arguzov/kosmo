<%
   fl_hide = false
   if cookies.has_key?(:views_count)
       cookies[:views_count] = cookies[:views_count].to_i + 1
       if cookies[:views_count] > 7
           fl_hide = true
       end
   else
       cookies[:views_count] = 1
   end
%>
<% if defined?(@service) && @service.id == 79%>
    <div class="container">
        <div class="section parallax parallax-bg" id="top-promos">
            <div class="call-to-action">
              <div class="row">
                <div class="col-md-8">
                  <p class="offer">
                    Только до 1 марта!
                  </p>
                  <h1>Лазерная эпиляция</h1>
                  <h3>удаление нежелательных волос навсегда</h3>
                  <h2 style="color:red;">со скидкой 30%</h2>
                </div>
                <div class="col-md-4">
                  <div class="text-center">
                    <a href="#booking" class="btn btn-success btn-lg">Записаться онлайн</a>
                  </div>
                </div>
              </div>
            </div>
          </div>
      </div>
<% else %>
    <%banners = Promo.where('fl_top = 1 and fl_active = 1').order('fl_banner DESC')%>
    <div class="section parallax parallax-bg dark-translucent-bg" id="top-promos">
      <div class="container">
        <div id="owl-top" class="owl-carousel owl-theme content-slider">
          <% banners.each do |banner|%>
              <div class="overlay-container">
                <div class="call-to-action">
                  <div class="row">
                    <div class="col-md-8">
                      <%=banner.banner.html_safe%>
                    </div>
                    <div class="col-md-4">
                      <div class="text-center">
                        <a href="/promos/<%=banner.id%>" class="btn btn-success btn-lg">Записаться онлайн</a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>