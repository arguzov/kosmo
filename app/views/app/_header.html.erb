<div class="container">
  <div class="row">
    <div class="container-fluid col-sm-12 col-xs-12 visible-xs visible-sm">
      <div class="row" id="sm-top">
        <div class="container">
          <div class="col-xs-4 col-sm-4 left">
            <a href="/">Центр эпиляции<br>и косметологии</a>
          </div>
          <div class="col-xs-4 col-sm-4 center">
            +7 (843) 2000-322
          </div>
          <div class="col-xs-4 col-sm-4 right">
            <button class="btn btn-primary btn-sm" data-toggle="modal" data-target="#recall" style="margin-top:10px;">
              Перезвоните мне!
            </button>

          </div>
        </div>
      </div>
    </div>
    <div class="col-md-4 visible-md visible-lg" id="logo">
      <div class="wrapper">
        <%=image_tag 'logo.png'%>
        <div class="address">
          <strong style="font-size: 1.3em;">+7 (843) 2000-322</strong><br>
          ул. Спартаковская д. 2а<br>
          пн-вс 9.00 - 21.00
        </div>
      </div>
    </div>
    <div class="col-md-8">
      <div id="promos-top" class="slick-slider">
        <% Promo.where('fl_top = 1 AND fl_active = 1').order('created_at DESC').each do |promo|%>
            <div style="display:none;">
            <table>
              <tr>
                <% if promo.id == 16%>
                    <td class="t">
                      <%=promo.banner.html_safe%>
                      <%=link_to "Подробнее о предложении", promo_path(promo), :class=>'btn btn-sm btn-primary'%>
                    </td>
                    <td class="i"><%=image_tag promo.photo.url(:medium)%></td>
                <% else %>
                    <td class="i"><%=image_tag promo.photo.url(:medium)%></td>
                    <td class="t">
                      <%=promo.banner.html_safe%>
                      <%=link_to "Подробнее о предложении", promo_path(promo), :class=>'btn btn-sm btn-primary'%>
                    </td>
                 <% end %>
              </tr>
            </table>
            </div>
        <% end %>

      </div>
    </div>
  </div>
</div>