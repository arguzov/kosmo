<%
    onsubmit = ''
    if @service != nil && @service.id == 79
        onsubmit = 'yaCounter28296001.reachGoal("lazer_order"); return true;'
    end
%>
<% if flash[:notice] && flash[:notice] == 'Order was created' %>
    <div class="well" style="padding:20px;text-align: center" id="modal-show" data-id="recall">Заявка принята<br>Спасибо за обращение в Центр эпиляции и косметологии.<br>Наш менеджер скоро свяжется с вами для уточнения деталей.</div>
<% else %>
<div class="well">
    <%= form_for [Order.new], :html => { :onsubmit => onsubmit } do |f| %>
  <div class="form-group has-feedback">
    <label for="subject4">Ваш телефон/email</label>
    <input type="text" class="form-control" id="subject4" placeholder="" name="order[contacts]" required>
    <i class="fa fa-pencil form-control-feedback"></i>
  </div>
  <div class="form-group has-feedback">
    <label for="message4"><%if defined?(text) %>Текст заявки<% else %>Комментарий (не обязательно)<% end %></label>
    <textarea rows="4" class="form-control" id="message4" name="order[content]" <%if not defined?(text) %>placeholder="Добавьте в это поле Ваши пожелания по времени звонка и/или любые другие вопросы. Можете оставить незаполненым, если хотите просто запросить звонок нашего специалиста"<% end %>><%if defined?(text) %><%=text%><% end %></textarea>
    <i class="fa fa-envelope-o form-control-feedback"></i>
  </div>
  <input type="submit" value="Отправить заявку" class="btn btn-default">
    <% end %>
</div>
<% end %>