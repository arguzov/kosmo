<!DOCTYPE html>
<html>
<head>
  <%= metamagic %>
  <%= stylesheet_link_tag    "v3/controller/#{params[:controller]}", media: "all" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="icon" href="/favicon.ico" type="image/x-icon">
  <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
</head>
<body class="no-trans">
<div class="page-wrapper">
  <%=render :partial => 'app/header'%>
  <%=render :partial => 'app/breadcrumbs'%>
  <section class="main-container" style="padding-top: 0px;">
    <div class="container">
      <div class="row">
        <%=yield%>
      </div>
    </div>
  </section>
  <%= javascript_include_tag "v3/controller/#{params[:controller]}" %>
  <script type="text/javascript" src="//vk.com/js/api/openapi.js?116"></script>
  <script type="text/javascript" src="//vk.com/js/api/openapi.js?121"></script>
  <%=render :partial => 'app/footer'%>
</div>
<%=render :partial => 'app/widgets/jivosite'%>
</body>
</html>
