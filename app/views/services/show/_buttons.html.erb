<div class="row well text-center" style="margin: 20px 0px;">
  <% unless defined?noprices %>
  <div class="col-md-4">
    <a href="javascript://" class="btn btn-lg btn-primary <% if defined?(service) %>m-act<% end %>" <% if defined?(service) %>data-service="<%=service.id%>" data-action="3"<% end %>  data-toggle="modal" data-target="#service-prices">Стоимость</a>
  </div>
  <% end %>
  <% unless defined?noreviews %>
      <% if defined?(service) && service.reviews.count > 0 %>
          <div class="col-md-4">
            <a href="javascript://" class="btn btn-lg btn-danger" data-toggle="modal" data-target="#service-reviews">Отзывы</a>
          </div>
      <% end %>
  <% end %>
  <% if defined?(service) && defined?(description) %>
      <div class="col-md-4">
        <a href="<%=service_path(id:service.id, url:service.url)%>" class="btn btn-lg btn-warning">Описание услуги</a>
      </div>
  <% end %>
  <div class="col-md-4">
    <a href="#" class="btn btn-lg btn-success <% if defined?(service) %>m-act<% end %>" <% if defined?(service) %>data-service="<%=service.id%>" data-action="2"<% end %> data-toggle="modal" data-target="#recall">Записаться</a>
  </div>
</div>