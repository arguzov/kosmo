<div class="row call-to-action" style="background-color: #E9E9E9;margin-bottom: 20px;">
  <div class="col-md-12" style="background-color: #3F2021;text-align: left;color: #fff;font-size:1.2em;padding: 10px;">
    <%=certificate.name%>
    <div class="pull-right">
      <%=certificate.price%> <div class="rouble">Р</div>
    </div>
  </div>
  <div class="col-md-4" style="padding: 15px;">
    <img src="http://kosmetologiya-kazan.ru/<%=image_path certificate.photo.url%>">
  </div>
  <div class="col-md-8" style="padding-top: 15px;text-align: left;">
    <%=simple_format(certificate.preview)%>
    <%= form_for [Order.new] do |f| %>
        <input type="hidden" name="order[content]" value="<%=certificate.name.gsub('Программа','').gsub('"','')%>">
        <input type="hidden" name="order[contacts]" value="">
        <input type="hidden" name="order[fl_type]" value="4">
        <input type="hidden" name="order[url]" value="">
        <input type="hidden" name="order[price]" value="<%=certificate.price%>">
        <button type="submit" class="btn btn-primary">Заказать онлайн</button>
    <% end %>
  </div>
</div>