<h2 class="text-center">Популярные услуги</h2>
<div class="separator"></div>
<div class="section clearfix" style="padding:0px;margin: 0px;">

  <div class="container">
    <div class="row">
      <div class="col-md-12" style="padding-bottom: 0px;margin-bottom: 0px;">
        <!-- isotope filters start -->
        <!--<div class="filters">
          <ul class="nav nav-pills">
            <li class="active"><a href="#" data-filter="*">Все</a></li>
            <li><a href="#" data-filter=".r1">Эпиляция</a></li>
            <li><a href="#" data-filter=".r2">Косметология</a></li>
            <li><a href="#" data-filter=".r4">Коррекция фигуры</a></li>
