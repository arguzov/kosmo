<%
   meta :title => "#{@faq.name} - вопросы и ответы",
        :description => Sanitize.clean(@faq.question).gsub("\n"," ").truncate(250)
%>
<div id="faq-document">
  <div class="page-header">
    <h1><%=@faq.name%></h1>
  </div>
  <div class="well question"><%=@faq.question.html_safe%></div>
  <div class="answer"><%=@faq.answer.html_safe%></div>
</div>
