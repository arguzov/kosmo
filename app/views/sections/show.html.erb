<%
   meta :title => "#{@section.name} в Казани"
%>
<div class="row">
<div class="main col-md-9">
  <h1 class="page-title"><%=@section.name%></h1>
  <% if Section.where('parent_id = ?',@section.id).count() > 0 %>
      <%=render :partial => 'sections/show/subsection', :locals => {section: @section}%>
  <% else %>
      <%=render :partial => 'sections/show/services'%>
  <% end %>
  <div style="border-left: 0px solid #ededed;padding-left: 20px;">
    <%=alt_tags(@section.content,@section.name).html_safe%>
  </div>
</div>
  <div class="col-md-3">
    <%=render partial: 'app/widgets/right'%>
  </div>
</div>
<div class="row" style="margin-top: 20px;">
  <div class="col-md-3 hidden-sm hidden-xs">
    <div class="block clearfix" style="margin-top: 30px;">
      <%service = @section.services.first%>
      <%service.experts.limit(1).each do |expert|%>
          <%=render partial: 'experts/shared/portrait', :locals => {expert: expert}%>
          <br>
      <% end %>
    </div>
  </div>
  <div class="col-md-9 col-sm-12 col-xs-12">
    <div class="comments-form">
      <h2 class="title" id="booking">Записаться на консультацию онлайн</h2>
      <%=render :partial => 'app/order/form'%>
    </div>
  </div>
</div>