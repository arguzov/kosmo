<div class="masonry-grid-fitrows row grid-space-20">
  <%@section.services.order('fl_order ASC').each do |service|%>
      <div class="col-md-4 col-sm-6 masonry-grid-item">
        <div class="listing-item">
          <div style="height: 200px;overflow: hidden">
            <img src="<%=service.photo.url(:medium)%>" style="height: 100%;-webkit-filter: sepia(15%);">
          </div>
          <div class="listing-item-body clearfix" style="background-color: #f1f1f1;height: 180px;">
            <div style="height: 120px;">
            <h3 class="title"><%=link_to service.name.truncate(35), service_path(id:service.id, url:service.url)%></h3>
            <p><%=service.anounce.truncate(70)%></p>
            </div>
            <span class="price">от <%=service.price%> <div class="rouble">Р</div></span>
            <div class="elements-list pull-right">
              <%=link_to service_path(id:service.id, url:service.url) do%><i class="fa fa-shopping-cart pr-10"></i>Подробнее<% end %>
            </div>
          </div>
        </div>
      </div>
  <% end %>
</div>