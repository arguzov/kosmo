<div class="wrapper wrapper-content animated fadeInRight">
  <div class="ibox">
    <div class="ibox-title">Список товаров</div>
    <div class="ibox-content">
        <table class="table dataTables-grid">
          <thead>
          <tr>
            <th>id</th>
            <th>Название</th>
            <th>Url</th>
            <th>Категория</th>
            <th>Цена</th>
            <th>Активен</th>
            <th>Действия</th>
          </tr>
          </thead>
          <tbody>
          <%@products.each do |product|%>
              <Tr>
                <td><%=product.id%></td>
                <td><%=product.name%></td>
                <td><%=product.url%></td>
                <td><%=product.shop_category.name%></td>
                <td><input style="width:80px;" type="text" class="form-control"></td>
                <td><% if product.fl_show %><%=fa_icon 'check'%><% end %></td>
                <td>
                  <%=link_to edit_manager_shop_product_path(product), :class=> 'btn btn-success btn-sm' do %><%=fa_icon 'edit'%><% end %>
                  <%=link_to manager_shop_product_path(product), :class=>'btn btn-danger btn-sm', :method => :delete do %><%=fa_icon 'times'%><% end %>
                </td>
              </Tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>