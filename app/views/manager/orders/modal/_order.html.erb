<div class="modal fade" id="manager-order" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title">Результат</h4>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <label for="exampleInputPhone">Статус</label>
          <select id="order-status" class="form-control">
              <option value="0">Выбрать</option>
              <%Order::STATUSES.each do |index,name|%>
                  <option value="<%=index%>"><%=name%></option>
              <% end %>
          </select>
        </div>
        <div class="form-group">
          <label for="exampleInputText">Комментарий</label>
          <textarea style="height: 100px;" class="form-control" id="order-comment"></textarea>
        </div>
        <button class="btn btn-success" id="process-order">Готово</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->