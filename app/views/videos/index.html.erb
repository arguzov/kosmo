<%
   meta :title => "Видео по косметологии в Казани - как делают услуги",
        :description => 'Видео косметологических услуг реально сделанные в клинике Казани'
%>
<div class="main col-md-12 col-xs-12" id="news">
  <!-- page-title start -->
  <!-- ================ -->
  <h1 class="page-title" style="padding-bottom: 20px;">Видео косметологических услуг</h1>
  <div class="separator-2"></div>
  <div class="masonry-grid-fitrows row grid-space-20">
    <%@videos.each do |video|%>
        <%
          code = video.code.scan(/(embed)\/([a-z0-9A-Z]+)/i)
          url = video.code.scan(/src="([^"]*)"/i)
          if code[0] == nil
              next
          end
          thumb = 'https://img.youtube.com/vi/' + code[0][1] + '/mqdefault.jpg'
        %>
        <div class="col-md-4 col-sm-6 masonry-grid-item col-xs-12">
          <div class="listing-item">
            <div style="height: 220px;overflow: hidden">
              <img src="<%=thumb%>" style="height: 100%;-webkit-filter: sepia(15%);">
            </div>
            <div class="listing-item-body clearfix" style="height: 160px;">
              <div style="height: 100px;">
                <h3 class="title"><a href="<%=url[0][0]%>" target="_blank" style="text-decoration: underline"><%= video.name.truncate(35) %></a></h3>
              </div>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>