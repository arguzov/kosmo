<%
   meta :title => @expert.profession + ' - ' + @expert.name,
        :description => Sanitize.clean(@expert.content).gsub("\n"," ").truncate(250)
%>
<div class="main col-md-8 scrollit">
  <h1 class="page-title"><%=@expert.name%></h1>
  <%=render :partial=>'experts/show/gallery'%>
  <% if @expert.content.length > 0 %>
      <%=@expert.content.html_safe%>
  <% end %>
  <%=render :partial => 'experts/show/diplomas'%>
  <%=render :partial => 'experts/show/reviews'%>
  <div class="comments-form">
    <h2 class="title">Записаться к специалисту</h2>
    <%=render :partial => 'app/order/form'%>
  </div>
</div>
<aside class="col-md-3 col-md-offset-1">
  <div class="sidebar" style="padding-top:30px;">
    <%=render :partial => 'experts/shared/portrait', :locals => {expert: @expert}%>
    <%=render :partial => 'experts/show/education'%>
    <%=render :partial => 'experts/show/specialization'%>
  </div>
</aside>
