<% if @diplomas.length > 0 %>
    <h2 class="title">Дипломы и сертификаты</h2>
    <div class="owl-carousel carousel-autoplay">
      <% @diplomas.each do |image| %>
          <div class="image-box">
            <%= link_to image.gsub('public', '').gsub('th/', '') do %>
                <%= image_tag image.gsub('public', '') %>
            <% end %>
          </div>
      <% end %>
    </div>
<% end %>