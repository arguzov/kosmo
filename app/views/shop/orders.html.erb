<div class="page-header">
  <h3>Мои заказы</h3>
</div>
    <table class="table" id="shop-orders">
      <tr>
        <th>Заказ</th>
        <th class="c">Дата</th>
        <th class="c">К-во позиций</th>
        <th class="c">Сумма</th>
        <th class="c">Статус</th>
      </tr>
      <%@orders.each do |order|%>
          <tr>
            <td><%=link_to "Заказ #{order.id}", shop_order_path(order)%></td>
            <td class="c"><%=order.created_at%></td>
            <td class="c"><%=order.qty%></td>
            <td class="c"><%=order.price%> <span class="rouble">Р</span></td>
            <td class="c">Выполняется</td>
          </tr>
      <% end %>
    </table>
