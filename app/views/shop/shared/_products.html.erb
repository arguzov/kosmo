<%products.each do |product|%>
    <div class="col-sm-6 col-md-4">
      <div class="thumbnail" >
        <div class="caption" style="text-align: center;text-decoration: underline;height: 60px;">
          <%=link_to product.name.html_safe, shop_product_path({url: product.url})%>
        </div>
        <%if product.photo? %>
            <%if product.collection_id == 39 %>
               <div class="img-wrapper">
                 <%=image_tag product.photo.url%>
               </div>
            <% else %>
                <div class="img-wrapper-2">
                    <%=image_tag product.photo.url(:thumb)%>
                </div>
            <% end %>
        <% else %>
            <% if unit_id == 1 %>
                <%=image_tag "/data/products/#{product.id}.jpg"%>
            <% end %>
        <% end %>
        <div class="caption">
          <table class="table">
            <tr>
              <td style="font-size: 12px;text-decoration: underline"><%=link_to "Подробнее", shop_product_path({url: product.url})%></td>
              <td style="text-align: right;background-color: #006699;color: #fff;vertical-align: middle;width: 100px;font-size: 12px;">от <%=product.prices%> руб.</td>
            </tr>
          </table>
        </div>
      </div>
    </div>
<% end %>