<div id="shop-unit">
  <div class="page-header">
    <h1><%=@unit.name%></h1>
  </div>
  <div class="descr">
    <%=@unit.description.html_safe%>
  </div>
  <div class="row" id="shop-collection" style="margin-top: 20px;">
    <%@products.limit(6).each do |product|%>
        <div class="col-sm-6 col-md-4">
          <div class="thumbnail" >
            <div class="caption" style="text-align: center;text-decoration: underline;height: 60px;">
              <%=link_to product.name.html_safe, shop_product_path({url: product.url})%>
            </div>
            <%if product.photo? %>
                <%=image_tag product.photo.url(:thumb)%>
            <% else %>
                <% if @unit.id == 1 %>
                    <%=image_tag "/data/products/#{product.id}.jpg"%>
                <% end %>
            <% end %>
            <div class="caption">

            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>